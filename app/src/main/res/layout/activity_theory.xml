<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C562F">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/header"
            android:maxHeight="50dp">

            <Button
                android:layout_marginTop="3dp"
                android:id="@+id/Back"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center|top"
                android:layout_marginLeft="10dp"
                android:foreground="@drawable/back"
                android:foregroundTint="#FFFFFF"
                android:gravity="center|top"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp"></Button>

            <TextView
                android:fontFamily="@font/old_soviet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:gravity="center|top"
                android:paddingTop="3dp"
                android:shadowColor="#000000"
                android:shadowDx="10"
                android:shadowDy="4"
                android:shadowRadius="1"
                android:text="История"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <Button
                android:id="@+id/next"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:foreground="@drawable/next"
                android:foregroundTint="#FFFFFF"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp"
                android:visibility="invisible"
                tools:visibility="invisible"></Button>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="40dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:background="@drawable/button_background"
            android:orientation="vertical">

            <TextView
                android:shadowColor="#000000"
                android:shadowDx="10"
                android:shadowDy="4"
                android:shadowRadius="1"
                android:id="@+id/Title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/background_text"
                android:fontFamily="@font/old_soviet"
                android:gravity="center"
                android:text="герой"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/Image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"></ImageView>
            </LinearLayout>

            <TextView
                android:layout_weight="1"
                android:shadowColor="#000000"
                android:shadowDx="10"
                android:shadowDy="4"
                android:shadowRadius="1"
                android:fontFamily="@font/old_soviet"
                android:textColor="@color/white"
                android:id="@+id/TextWindow"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="visible"></TextView>

            <LinearLayout
                android:id="@+id/ControlDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:shadowColor="#000000"
                    android:shadowDx="10"
                    android:shadowDy="4"
                    android:shadowRadius="1"
                    android:fontFamily="@font/old_soviet"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/disable"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="назад"
                    android:id="@+id/TextBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:visibility="visible"></Button>
                <Button
                    android:shadowColor="#000000"
                    android:shadowDx="10"
                    android:shadowDy="4"
                    android:shadowRadius="1"
                    android:fontFamily="@font/old_soviet"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/darkGreen"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/TextForward"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="вперёд"
                    android:visibility="visible"></Button>
            </LinearLayout>

            <Button
                android:shadowColor="#000000"
                android:shadowDx="10"
                android:shadowDy="4"
                android:shadowRadius="1"
                android:fontFamily="@font/old_soviet"
                android:layout_marginBottom="30dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/darkGreen"
                android:id="@+id/LocationButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Продолжить"
                tools:visibility="invisible"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/footer"
            android:maxHeight="50dp"></LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>