<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/v_general"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:paddingLeft="20dp"
            android:paddingTop="40dp"
            android:paddingRight="20dp">

            <TextView
                android:background="@drawable/background_for_text"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:fontFamily="@font/old_soviet"
                android:textColor="@color/white"
                android:id="@+id/TextWindow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="20dp"
                android:visibility="invisible"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ControlDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:fontFamily="@font/old_soviet"
                android:textColor="@color/white"
                android:backgroundTint="@color/lightGreen"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="назад"
                android:id="@+id/TextBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="30dp"
                android:visibility="invisible"></Button>

            <Button
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:fontFamily="@font/old_soviet"
                android:textColor="@color/white"
                android:backgroundTint="@color/darkGreen"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:id="@+id/TextForward"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="вперёд"
                android:visibility="invisible"></Button>
        </LinearLayout>

        <Button
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:fontFamily="@font/old_soviet"
            android:textColor="@color/white"
            android:backgroundTint="@color/darkGreen"
            android:id="@+id/LocationButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Продолжить"
            tools:visibility="invisible"></Button>

        <ImageView
            android:id="@+id/vdv1"
            android:layout_width="100dp"
            android:layout_height="100dp"></ImageView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>