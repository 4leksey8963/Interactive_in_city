<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#2C321E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/header"
            android:maxHeight="50dp">

            <Button
                android:layout_marginTop="3dp"
                android:id="@+id/Back"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center|top"
                android:layout_marginLeft="10dp"
                android:foreground="@drawable/back"
                android:foregroundTint="#FFFFFF"
                android:gravity="center|top"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp"></Button>

            <TextView
                android:fontFamily="@font/old_soviet"
                android:text="Мои награды"
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:gravity="center|top"
                android:paddingTop="3dp"
                android:shadowColor="#000000"
                android:shadowDx="10"
                android:shadowDy="4"
                android:shadowRadius="1"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <Button
                android:id="@+id/next"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:foreground="@drawable/next"
                android:foregroundTint="#FFFFFF"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp"
                tools:visibility="invisible"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:background="@drawable/button_background"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">
            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:shadowColor="#000000"
                        android:shadowDx="5"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:fontFamily="@font/old_soviet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="7dp"
                        android:text="Ваш прогресс"
                        android:textColor="@color/white"
                        android:textSize="20dp"></TextView>
                    <ProgressBar
                        android:layout_marginTop="8dp"
                        android:progressDrawable="@drawable/custom_progress_bar"
                        android:id="@+id/ProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal">
                    </ProgressBar>
                </LinearLayout>

                <TextView
                    android:shadowColor="#000000"
                    android:shadowDx="5"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:fontFamily="@font/old_soviet"
                    android:id="@+id/TextProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0%"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Reward1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="15"
                        android:foreground="@drawable/bronze2"></ImageView>
                    <TextView
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:shadowColor="#000000"
                        android:shadowDx="5"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:fontFamily="@font/old_soviet"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:text=" Бронзовый\nследопыт"
                        android:textColor="@color/white"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Reward2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="15"
                        android:foreground="@drawable/silver2"></ImageView>
                    <TextView
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:shadowColor="#000000"
                        android:shadowDx="5"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:fontFamily="@font/old_soviet"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:textColor="@color/white"
                        android:text="Серебрянный\nследопыт">
                    </TextView>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Reward3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="15"
                        android:foreground="@drawable/gold2"></ImageView>

                    <TextView
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:shadowColor="#000000"
                        android:shadowDx="5"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:fontFamily="@font/old_soviet"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:text="Золотой\nследопыт"
                        android:textColor="@color/white"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Reward4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="15"
                        android:foreground="@drawable/platina2"></ImageView>
                    <TextView
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:shadowColor="#000000"
                        android:shadowDx="5"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:fontFamily="@font/old_soviet"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:textColor="@color/white"
                        android:text="Платиновый\nследопыт">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <Button

                android:layout_marginTop="20dp"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:fontFamily="@font/old_soviet"
                android:gravity="center"
                android:id="@+id/Diplom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/darkGreen"
                android:text="Получить сертификат"
                android:textColor="@color/white"
                app:cornerRadius="10dp"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/footer"
            android:maxHeight="50dp"></LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>