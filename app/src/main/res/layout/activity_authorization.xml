<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C562F">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/header"
            android:maxHeight="50dp">

            <Button
                android:layout_marginTop="3dp"
                android:id="@+id/Exit"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center|top"
                android:layout_marginLeft="10dp"
                android:foreground="@drawable/back"
                android:foregroundTint="#FFFFFF"
                android:gravity="center|top"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp"></Button>

            <TextView
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:gravity="center|top"
                android:paddingTop="3dp"
                android:shadowColor="#000000"
                android:shadowDx="10"
                android:shadowDy="4"
                android:shadowRadius="1"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <Button

                android:id="@+id/next"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:foreground="@drawable/next"
                android:foregroundTint="#FFFFFF"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp"
                tools:visibility="invisible"></Button>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:background="@drawable/button_background"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:shadowColor="#000000"
                android:shadowDx="10"
                android:shadowDy="4"
                android:shadowRadius="1"
                android:fontFamily="@font/old_soviet"
                android:id="@+id/Memorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Авторизация"
                android:textColor="@color/darkGreen"
                android:textSize="30dp"
                android:textStyle="bold"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:shadowColor="#000000"
                    android:shadowDx="5"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:fontFamily="@font/old_soviet"
                    android:id="@+id/FirstName"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="Введите ваше имя*"
                    android:textColor="@color/darkGreen"
                    android:textStyle="bold"></TextView>

                <EditText
                    android:id="@+id/EditFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/form_authorization"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/old_soviet"
                    android:hint="Введите ваше имя"
                    android:inputType="text"
                    android:maxHeight="30dp"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:shadowColor="#000000"
                    android:shadowDx="5"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:fontFamily="@font/old_soviet"
                    android:id="@+id/LastName"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="Введите вашу фамилию*"
                    android:textColor="@color/darkGreen"
                    android:textStyle="bold"></TextView>

                <EditText
                    android:maxLength="15"
                    android:maxLines="1"
                    android:fontFamily="@font/old_soviet"
                    android:id="@+id/EditLastName"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/form_authorization"
                    android:drawablePadding="8dp"
                    android:hint="Введите вашу фамилию"
                    android:inputType="text"
                    android:maxHeight="30dp"
                    android:paddingStart="8dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:shadowColor="#000000"
                    android:shadowDx="5"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:fontFamily="@font/old_soviet"
                    android:id="@+id/School"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="Введите вашу школу*"
                    android:textColor="@color/darkGreen"
                    android:textStyle="bold"></TextView>

                <EditText
                    android:maxLength="15"
                    android:maxLines="1"
                    android:fontFamily="@font/old_soviet"
                    android:id="@+id/EditSchool"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/form_authorization"
                    android:drawablePadding="8dp"
                    android:hint="Введите вашу школу"
                    android:inputType="text"
                    android:maxHeight="30dp"
                    android:paddingStart="8dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="12dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:shadowColor="#000000"
                    android:shadowDx="5"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:fontFamily="@font/old_soviet"
                    android:id="@+id/Class"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="Введите ваш класс*"
                    android:textColor="@color/darkGreen"
                    android:textStyle="bold"></TextView>

                <EditText
                    android:maxLength="15"
                    android:maxLines="1"
                    android:fontFamily="@font/old_soviet"
                    android:id="@+id/EditClass"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/form_authorization"
                    android:drawablePadding="8dp"
                    android:hint="Введите вашу класс"
                    android:inputType="text"
                    android:maxHeight="30dp"
                    android:paddingStart="8dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="12dp" />

            </LinearLayout>

            <Button
                android:shadowColor="#000000"
                android:shadowDx="10"
                android:shadowDy="4"
                android:shadowRadius="1"
                android:gravity="center"
                android:backgroundTint="@color/darkGreen"
                android:fontFamily="@font/old_soviet"
                android:id="@+id/LocationButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:text="Продолжить"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                app:cornerRadius="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/footer"
            android:maxHeight="50dp"></LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>