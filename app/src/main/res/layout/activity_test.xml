<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C562F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/header"
            android:maxHeight="50dp">

            <Button
                android:layout_marginTop="3dp"
                android:id="@+id/Back"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center|top"
                android:layout_marginLeft="10dp"
                android:foreground="@drawable/back"
                android:foregroundTint="#FFFFFF"
                android:gravity="center|top"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp"></Button>

            <TextView
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:gravity="center|top"
                android:paddingTop="3dp"
                android:shadowColor="#000000"
                android:shadowDx="10"
                android:shadowDy="4"
                android:shadowRadius="1"
                android:text="Тест"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <Button
                android:id="@+id/next"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:foreground="@drawable/next"
                android:foregroundTint="#FFFFFF"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp"
                android:visibility="invisible"
                tools:visibility="invisible"></Button>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:background="@drawable/button_background"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">
                <TextView
                    android:shadowColor="#000000"
                    android:shadowDx="7"
                    android:shadowDy="3"
                    android:shadowRadius="1"
                    android:gravity="center"
                    android:fontFamily="@font/old_soviet"
                    android:textSize="17dp"
                    android:textColor="@color/white"
                    android:id="@+id/Question"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:text="lksrvvnlsnblrnvlnvlnrvklnevlkrnvkrnvrvnv\nrkskvrsvmrvnv\nrv\nfbtb"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/HideLayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:visibility="invisible">

                <TextView
                    android:shadowColor="#000000"
                    android:shadowDx="5"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:id="@+id/TextProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Загрузка следующей попытки"
                    android:textColor="@color/white"
                    android:textStyle="bold"></TextView>

                <ProgressBar
                    android:id="@+id/ProgressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:progressDrawable="@drawable/custom_progress_bar">
                </ProgressBar>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <Button
                        android:textColor="@color/white"
                        android:shadowColor="#000000"
                        android:shadowDx="5"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:id="@+id/otv1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="#4C562F"
                        app:cornerRadius="15dp">

                    </Button>

                    <Button
                        android:textColor="@color/white"
                        android:shadowColor="#000000"
                        android:shadowDx="5"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:id="@+id/otv2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="#4C562F"
                        app:cornerRadius="15dp">

                    </Button>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">
                    <Button
                        android:textColor="@color/white"
                        android:shadowColor="#000000"
                        android:shadowDx="5"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:id="@+id/otv3"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="#4C562F"
                        app:cornerRadius="15dp">

                    </Button>

                    <Button
                        android:textColor="@color/white"
                        android:shadowColor="#000000"
                        android:shadowDx="5"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:id="@+id/otv4"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="#4C562F"
                        app:cornerRadius="15dp">

                    </Button>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:id="@+id/Continue"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/darkGreen"
                android:text="продолжить"
                android:textColor="@color/white"
                app:cornerRadius="15dp"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/footer"
            android:maxHeight="50dp"></LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>